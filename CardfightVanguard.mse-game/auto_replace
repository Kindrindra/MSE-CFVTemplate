	match: ONV
	replace: <sym>自</sym>:When placed on<sym>先</sym>
auto replace:
	match: ONR
	replace: <sym>自</sym>:When placed on<sym>友</sym>
auto replace:
	match: ONG
	replace: <sym>自</sym>:When put on<sym>助</sym>
auto replace:
	match: On-Intercept
	replace: When it intercepts
