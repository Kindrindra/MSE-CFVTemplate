#Costs
auto replace:
	match: COST
	replace: <sym>払</sym>
	
#shortcuts
auto replace:
	match: ETB
	replace: When placed
auto replace:
	match: CIP
	replace: When placed
auto replace:
	match: On-Place
	replace: When placed
auto replace:
	match: EOT
	replace: until end of turn
auto replace:
	match: ONATK
	replace: When it attacks
